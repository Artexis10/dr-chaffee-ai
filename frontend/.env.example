# =============================================================================
# DR. CHAFFEE AI - FRONTEND ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local for local development
# In production (Coolify), set these as Environment Variables in the app settings
# =============================================================================

# =============================================================================
# BACKEND API (Required)
# =============================================================================
# URL to the FastAPI backend service
# Local development: http://localhost:8001
# Production: Set to your deployed backend URL (e.g., https://drchaffee-backend.onrender.com)
BACKEND_API_URL=http://localhost:8001

# =============================================================================
# DATABASE (Required for server-side API routes)
# =============================================================================
# PostgreSQL connection string with pgvector extension
# Local: postgresql://postgres:password@localhost:5432/askdrchaffee
# Production: Set via Coolify environment variables
DATABASE_URL=postgresql://postgres:password@localhost:5432/askdrchaffee

# =============================================================================
# OPENAI API (Required for answer generation)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-key-here

# Model for answer generation
# Options: gpt-4o-mini (fast, cheap), gpt-4o (expensive, best quality)
SUMMARIZER_MODEL=gpt-4o-mini

# =============================================================================
# ANSWER SETTINGS
# =============================================================================
# Enable/disable AI answer generation
ANSWER_ENABLED=true

# Number of chunks to retrieve for context
ANSWER_TOPK=100

# Cache TTL in hours (336 = 14 days)
ANSWER_TTL_HOURS=336
ANSWER_CACHE_TTL_HOURS=336

# Default answer style: concise or detailed
ANSWER_STYLE_DEFAULT=concise

# Max clips per style (to control token usage)
MAX_CLIPS_CONCISE=30
MAX_CLIPS_DETAILED=100

# =============================================================================
# RATE LIMITING
# =============================================================================
# Requests per minute per style
RATE_LIMIT_CONCISE=10
RATE_LIMIT_DETAILED=3

# =============================================================================
# SEARCH SETTINGS
# =============================================================================
# Enable reranking for better search quality
RERANK_ENABLED=false

# =============================================================================
# AUTHENTICATION (Optional)
# =============================================================================
# Simple password protection for the frontend
# Leave empty to disable password protection
APP_PASSWORD=

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Set by Next.js automatically, but can be overridden
# NODE_ENV=development
