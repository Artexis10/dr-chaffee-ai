# =============================================================================
# DR. CHAFFEE AI - FRONTEND ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local for local development
# In production (Coolify/Vercel), set these as Environment Variables
# 
# NOTE: The frontend NEVER connects directly to Postgres.
# All database operations go through the backend API via BACKEND_API_URL.
# =============================================================================

# =============================================================================
# BACKEND API (Required)
# =============================================================================
# URL to the FastAPI backend service
BACKEND_API_URL=http://46.224.35.133:3000

# =============================================================================
# OPENAI API (Required for answer generation)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Model for answer generation
SUMMARIZER_MODEL=gpt-4.1

# =============================================================================
# SEARCH SETTINGS
# =============================================================================
# Enable reranking for better search quality
RERANK_ENABLED=false

# =============================================================================
# ANSWER GENERATION SETTINGS
# =============================================================================
# OpenAI API parameters for answer generation
ANSWER_MAX_TOKENS=1024
ANSWER_TEMPERATURE=0.2
ANSWER_TOP_P=1
ANSWER_PRESENCE_PENALTY=0
ANSWER_FREQUENCY_PENALTY=0

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limit window in seconds
RATE_LIMIT_WINDOW=60

# Maximum requests per window
RATE_LIMIT_MAX=90

# =============================================================================
# AUTHENTICATION (Optional)
# =============================================================================
# Simple password protection for the frontend
# Leave empty to disable password protection
APP_PASSWORD=

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=production
