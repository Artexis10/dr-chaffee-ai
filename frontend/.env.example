# =============================================================================
# DR. CHAFFEE AI - FRONTEND CONFIGURATION EXAMPLE
# =============================================================================
# Copy this file to .env.local for local development
# For production, set these as environment variables in Vercel/Render

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string (same as backend)
DATABASE_URL=postgresql://user:password@host:5432/database

# =============================================================================
# OPENAI
# =============================================================================
# OpenAI API key for answer generation
OPENAI_API_KEY=sk-proj-your_key_here

# Model: gpt-3.5-turbo (5-10x cheaper), gpt-4o (better quality)
# Recommendation: Start with gpt-3.5-turbo, it's excellent for RAG
SUMMARIZER_MODEL=gpt-3.5-turbo

# =============================================================================
# BACKEND SERVICES
# =============================================================================
# Embedding service URL for semantic search
# Local: http://localhost:8001
# Production: https://your-backend.onrender.com
EMBEDDING_SERVICE_URL=http://localhost:8001

# =============================================================================
# ANSWER SETTINGS
# =============================================================================
# Number of context chunks to retrieve for answer generation
# Higher = more context but slower and more expensive
ANSWER_TOPK=50

# Default answer style: 'concise' or 'detailed'
ANSWER_STYLE_DEFAULT=concise

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Simple password for admin features (optional for local dev)
APP_PASSWORD=your_secure_password_here


